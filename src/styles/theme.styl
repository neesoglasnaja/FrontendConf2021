.hightlight
.important
.alert
	border-radius 0.2em
	padding 0.1em 0.3em
.hightlight
	background #fafaa2
.hightlight *
	color #000 !important
.important
	background important-color
	color #fff
.important *
	color #fff !important
.alert
	background #D10A0A
	color #fff
.alert *
	color #fff !important
.comment
	color #999999
	
.progress
	border-color highlight-color rgba(0, 0, 0, 0) highlight-color highlight-color
	

.tag
	color #AD1531
.attr
	color #4F7302

.slide
	p.center
		text-align center
		img
			max-width 100%

	p.quote
		text-align center
		font-style italic

	&.no-page
		&::after
			visibility: hidden;

	.copyright
		position: absolute
		right 10px
		bottom 20px
		transform: translateX(100%) rotate(-90deg)
		transform-origin: 0 100%;
		font-size: 12px
		color: highlight-color

		&.white
			color: #fff

		
	
blockquote
	font-size 35px	
	line-height 1.4
	
figcaption
	opacity 0.5
	position: relative
	line-height: 1.6
	margin-top: 40px !important


.slide ul>li:lang(ru)::before
    color: highlight-color
    content: '\2BC0';

.slide ol li, .slide ul li
	padding-left: 32px;

.slide li>ul>li
    color: #444;
    line-height: 30px;
    font-size: 20px;

.strike
    text-decoration: line-through

.anti-mudak
	color: #888;
	position: absolute;
	top: 80px
	left: 60px
	font-size: 0.75em;

.link
    position relative
    margin-left: 1.8em
    line-height: 1.3em
.link::before
    left: -1.8em;
    position absolute
    top 0.1em
    display inline-block
    width 1.5em
    height 1.4em
    content ''
    background-repeat no-repeat
    background-size contain
.link-github::before
    background-image url('pictures/github-logo.svg')

.hashtag
	font-size: 32px
	opacity: 0.6

